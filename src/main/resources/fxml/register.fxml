<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.agriminds.controller.RegisterController" 
      spacing="15" style="-fx-background-color: #f5f5f5;" prefWidth="450">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Create New Account" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;"/>
    
    <GridPane hgap="10" vgap="12">
        <columnConstraints>
            <ColumnConstraints minWidth="120" prefWidth="120"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
        </columnConstraints>
        
        <Label text="Full Name*:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" promptText="Enter your full name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label text="Email*:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" promptText="example@gmail.com" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <Label text="Phone*:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" promptText="01XXXXXXXXX" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        
        <Label text="District*:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="districtCombo" promptText="Select district" maxWidth="Infinity" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        
        <Label text="Password*:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" promptText="Min 8 characters" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        
        <Label text="Confirm Password*:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>
    
    <Label text="* All fields are required" style="-fx-text-fill: #888; -fx-font-size: 12px;"/>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="cancelBtn" text="Cancel" onAction="#handleCancel" 
                style="-fx-background-color: #ccc; -fx-padding: 10 30;"/>
        <Button fx:id="registerBtn" text="Register" onAction="#handleRegister" 
                style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-padding: 10 30;"/>
    </HBox>
</VBox>
