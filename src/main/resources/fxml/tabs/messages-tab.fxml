<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.agriminds.controller.MessagesController">

    <!-- Left Side: Conversations List -->
    <left>
        <VBox spacing="10" prefWidth="300" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-width: 0 1 0 0;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="ðŸ’¬ Messages" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="startNewChatButton" text="+" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 20; -fx-min-width: 35; -fx-min-height: 35;"/>
            </HBox>

            <Separator/>

            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-background: transparent;">
                <VBox fx:id="conversationsContainer" spacing="8">
                    <padding>
                        <Insets top="5" right="5" bottom="5" left="5"/>
                    </padding>
                </VBox>
            </ScrollPane>
        </VBox>
    </left>

    <!-- Right Side: Chat Area -->
    <center>
        <VBox fx:id="chatContainer" spacing="0">
            <!-- Chat Header -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #2196F3; -fx-padding: 15;">
                <Label fx:id="chatHeaderLabel" text="Select a conversation" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Messages Area -->
            <ScrollPane fx:id="chatScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: #f0f0f0;">
                <!-- Messages will be loaded dynamically -->
            </ScrollPane>

            <!-- Message Input Area -->
            <HBox spacing="10" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-width: 1 0 0 0;">
                <TextArea fx:id="messageInput" promptText="Type your message..." wrapText="true" prefRowCount="2" HBox.hgrow="ALWAYS" style="-fx-font-size: 13px;"/>
                <Button fx:id="sendButton" text="Send" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 25; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
